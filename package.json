{
  "name": "fintrack-web",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "convert:api": "swagger2openapi ./src/api/swagger.yaml -o ./src/api/openapi.yaml",
    "generate:api": "npm run convert:api && ng-openapi -c ./src/api/openapi.config.ts"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@10.9.4",
  "dependencies": {
    "@angular/cdk": "~21.1.3",
    "@angular/common": "^21.1.0",
    "@angular/compiler": "^21.1.0",
    "@angular/core": "^21.1.0",
    "@angular/forms": "^21.1.0",
    "@angular/material": "~21.1.3",
    "@angular/platform-browser": "^21.1.0",
    "@angular/router": "^21.1.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^21.1.2",
    "@angular/cli": "^21.1.2",
    "@angular/compiler-cli": "^21.1.0",
    "@angular/material": "^21.1.3",
    "@ng-openapi/http-resource": "^0.0.26",
    "jsdom": "^27.1.0",
    "ng-openapi": "^0.2.14",
    "swagger2openapi": "^7.0.8",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8"
  }
}